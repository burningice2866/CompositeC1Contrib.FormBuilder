        <XmlFileMerge changeDefinitionPath="~\config\App_Data\Composite\composite.config" targetFilePath="~\App_Data\Composite\composite.config" />
      </XmlFileMerges>
    </mi:Add>
  </mi:PackageFragmentInstallers>
</mi:PackageInstaller>